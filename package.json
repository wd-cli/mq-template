{
  "name": "mq-template",
  "version": "1.0.0",
  "description": "",
  "main": "gulp/gulpfile.js",
  "scripts": {
    "start": "node gulp/server;",
    "dev": "gulp --gulpfile ./gulp/gulpfile.js dev;",
    "dev-daily": "gulp --gulpfile ./gulp/gulpfile.js dev-daily;",
    "dev-pre": "gulp --gulpfile ./gulp/gulpfile.js dev-prepare;",
    "dev-prod": "gulp --gulpfile ./gulp/gulpfile.js dev-product;",
    "daily": "gulp --gulpfile ./gulp/gulpfile.js daily;",
    "pre": "gulp --gulpfile ./gulp/gulpfile.js prepare;",
    "prod": "gulp --gulpfile ./gulp/gulpfile.js product;",
    "publish": "gulp --gulpfile ./gulp/gulpfile.js publish;",
    "m:init": "node gulp/CI.js",
    "lint": "eslint \"src/**/*.js\" -c .eslintrc.js  -o lint-result.html -f html && echo \"\\033[32m√ eslint通过\\033[0m\" || echo \"\\033[31mX eslint不通过\\033[0m\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint  -c .eslintrc.js  --fix",
      "git add"
    ],
    "src/**/*.{js,ts}": [
      "eslint  -c .eslintrc.js  --fix",
      "git add"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "keywords": [
    "gulp",
    "lerna",
    "bower"
  ],
  "author": "zhengxi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wd-cli/mq-template/issues"
  },
  "homepage": "https://github.com/wd-cli/mq-template#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-eslint": "^6.1.2",
    "del": "latest",
    "eslint": "^7.0.0",
    "extend": "latest",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^2.3.2",
    "gulp-csslint": "^1.0.1",
    "gulp-eslint": "^2.1.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-json-editor": "^2.5.4",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^1.4.0",
    "gulp.replace": "^1.1.1",
    "husky": "^4.2.5",
    "koa": "^1.1.2",
    "koa-send": "^3.1.1",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.2",
    "miniprogram-ci": "^1.0.29",
    "prettier": "^2.0.5",
    "run-sequence": "latest",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "miniprogram-recycle-view": "^0.1.5"
  }
}
